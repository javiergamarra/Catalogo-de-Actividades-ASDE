<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nhpatt.asde">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".mvp.activities.MainActivity"
            android:label="@string/app_name">

        </activity>
        <activity android:name=".mvp.activities.RiskDetailActivity" />
        <activity
            android:name=".mvp.activities.CatalogListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.activities.ItemListActivity"
            android:label="@string/title_item_list" />
        <activity
            android:name=".mvp.activities.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".mvp.activities.ItemListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mvp.activities.ItemListActivity" />
        </activity>
    </application>
</manifest>
