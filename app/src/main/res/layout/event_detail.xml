<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.nhpatt.asde.mvp.activities.EventDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:titleTextColor="@android:color/white"
            app:layout_scrollFlags="scroll|enterAlways">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.nhpatt.asde.mvp.activities.EventDetailActivity">

            <TextView
                android:id="@+id/activity_description_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:text="DESCRIPCION" />

            <TextView
                android:id="@+id/activity_description_content_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_description_title_textview"
                android:gravity="center_vertical"
                android:hint="La descripcion de la actividad" />

            <TextView
                android:id="@+id/activity_characteristics_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_description_content_textview"
                android:gravity="center_horizontal"
                android:text="CARACTERÍSTICAS:" />

            <TextView
                android:id="@+id/activity_characteristics_content_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_characteristics_title_textview"
                android:text="las caracteristicas de la actividad" />

            <TextView
                android:id="@+id/activity_measure_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_characteristics_content_textview"
                android:gravity="center_horizontal"
                android:text="MEDIDAS PREVENTIVAS:" />


            <TextView
                android:id="@+id/activity_measure_content_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_measure_title_textview"
                android:text="Las medidas preventivas de la actividad:" />

        </RelativeLayout>

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
